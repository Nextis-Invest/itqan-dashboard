DATABASE_URL=postgresql://user:password@host:port/dbname

# Catalog DB (shared categories/slugs - central)
CATALOG_DATABASE_URL=postgresql://user:password@catalog-host:port/dbname?connection_limit=5
NEXTAUTH_SECRET=your-secret-key
# Development: http://localhost:3000
# Production: https://app.itqan.ma (update this in production!)
NEXTAUTH_URL=http://localhost:3000
# Public URL for robots.txt, sitemap, and email links
# Development: http://localhost:3000
# Production: https://app.itqan.ma
NEXT_PUBLIC_APP_URL=http://localhost:3000
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Redis Cache (optional - improves performance)
REDIS_URL=redis://default:password@host:6379/0

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
